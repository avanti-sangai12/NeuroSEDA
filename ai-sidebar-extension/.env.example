# NeuroSEDA Chrome Extension Environment Variables
# Note: For security, API keys should NOT be stored in .env files
# Store them securely in background.js or use Chrome storage API

# Gemini API Key (IMPORTANT: Keep this secret!)
# Do NOT commit your real API key
# Store it safely in: background.js
GEMINI_API_KEY=your_gemini_api_key_here

# Extension Configuration
EXTENSION_VERSION=1.0.0
EXTENSION_NAME=NeuroSEDA - AI Web Assistant

# Development
DEBUG_MODE=false
LOG_VERBOSE=false

# Feature Flags
ENABLE_TEXT_SELECTION=true
ENABLE_ELEMENT_INSPECTOR=true
ENABLE_CHAT=true
ENABLE_SETTINGS=true

# Timeouts (in milliseconds)
TEXT_SELECTION_DEBOUNCE=200
MENU_DISPLAY_TIMEOUT=6000
API_TIMEOUT=30000

# API Configuration
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent
GEMINI_MODEL=gemini-2.0-flash

# Chat Configuration
MAX_MESSAGE_LENGTH=1024
MAX_CHAT_HISTORY=50
AUTO_CLEAR_HISTORY=false

# UI Configuration
THEME=auto
TEXT_SELECTION_BUTTON_COLOR=#667eea
